<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectPayment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBgColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="Select Payment"
            android:textColor="@color/white"
            android:textSize="19sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/checkboxPaymentGateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:checked="true"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/checkboxPaymentGateway"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Gateway"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:drawableLeft="@drawable/ic_clock"
                        android:drawablePadding="5dp"
                        android:minLines="2"
                        android:text="Processing Time \nInstant"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvptime"
                        android:layout_marginTop="15dp"
                        android:text="Supports all major banks" />

                    <TextView
                        android:id="@+id/tv23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv22"
                        android:layout_marginTop="5dp"
                        android:text="Debit Cards, Any UPI, PhonePe, Google Pay, Paytm UPI, Net Banking"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv23"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/paytm" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/gpay" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView8"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/upi" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/phonepe" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/paytmupi" />


                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/checkboxPaymentScreenshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/checkboxPaymentScreenshot"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Payment \nScreenshot"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvptime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:drawableLeft="@drawable/ic_clock"
                        android:drawablePadding="5dp"
                        android:minLines="2"
                        android:text="Processing Time \n15-30 min"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvptime2"
                        android:layout_marginTop="15dp"
                        android:text="Supports" />

                    <TextView
                        android:id="@+id/tv25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv24"
                        android:layout_marginTop="5dp"
                        android:text="Debit Cards, Any UPI, PhonePe, Google Pay, Paytm UPI, Net Banking"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv25"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/paytm" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/gpay" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/upi" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/phonepe" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_icon_bg"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/paytmupi" />


                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <Button
            android:id="@+id/btnProceedPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Proceed" />

        <Button
            android:id="@+id/btnProceedCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/cardBgColor"
            android:text="Cancel" />

    </LinearLayout>

</androidx.cardview.widget.CardView>